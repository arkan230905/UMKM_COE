<script>
// Employee count data
const employeeData = @json($jabatanBtkl->map(function($jabatan) {
    return [
        'id' => $jabatan->id,
        'nama' => $jabatan->nama,
        'pegawai_count' => $jabatan->pegawais->count() ?? 0,
        'tarif' => $jabatan->tarif ?? 0
    ];
}));

document.addEventListener('DOMContentLoaded', function() {
    const jabatanSelect = document.getElementById('jabatan_id');
    const employeeCountDisplay = document.getElementById('employeeCountDisplay');
    const employeeCountText = document.getElementById('employeeCountText');
    const tarifDisplay = document.getElementById('tarif_per_jam_display');
    const tarifCalculationDisplay = document.getElementById('tarifCalculationDisplay');
    const tarifCalculationText = document.getElementById('tarifCalculationText');
    const kapasitasInput = document.getElementById('kapasitas_per_jam');
    const biayaPerProdukDisplay = document.getElementById('biaya_per_produk_display');
    const biayaPerProdukDisplayDiv = document.getElementById('biayaPerProdukDisplay');
    const biayaPerProdukText = document.getElementById('biayaPerProdukText');
    
    let currentTarifBtkl = 0;
    
    function updateAllCalculations(jabatan) {
        if (jabatan) {
            const jumlahPegawai = jabatan.pegawai_count;
            const tarifPerJam = jabatan.tarif;
            const tarifBtkl = tarifPerJam * jumlahPegawai;
            const kapasitas = parseInt(kapasitasInput.value) || 0;
            
            currentTarifBtkl = tarifBtkl;
            
            // Update employee count
            employeeCountText.textContent = jumlahPegawai + ' orang';
            employeeCountDisplay.style.display = 'block';
            
            // Update tariff display
            tarifDisplay.value = tarifBtkl.toLocaleString('id-ID');
            
            // Update tariff calculation display
            tarifCalculationText.textContent = 'Rp ' + tarifPerJam.toLocaleString('id-ID') + ' × ' + jumlahPegawai + ' pegawai = Rp ' + tarifBtkl.toLocaleString('id-ID');
            tarifCalculationDisplay.style.display = 'block';
            
            // Update biaya per produk
            updateBiayaPerProduk(kapasitas, tarifBtkl);
        } else {
            employeeCountDisplay.style.display = 'none';
            tarifCalculationDisplay.style.display = 'none';
            tarifDisplay.value = '0';
            biayaPerProdukDisplayDiv.style.display = 'none';
            biayaPerProdukDisplay.value = '0';
            currentTarifBtkl = 0;
        }
    }
    
    function updateBiayaPerProduk(kapasitas, tarif) {
        if (kapasitas > 0 && tarif > 0) {
            const biayaPerProduk = tarif / kapasitas;
            biayaPerProdukDisplay.value = biayaPerProduk.toLocaleString('id-ID', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
            biayaPerProdukText.textContent = 'Rp ' + tarif.toLocaleString('id-ID') + ' ÷ ' + kapasitas + ' pcs = Rp ' + biayaPerProduk.toLocaleString('id-ID', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
            biayaPerProdukDisplayDiv.style.display = 'block';
        } else {
            biayaPerProdukDisplayDiv.style.display = 'none';
            biayaPerProdukDisplay.value = '0';
        }
    }
    
    jabatanSelect.addEventListener('change', function() {
        const selectedJabatanId = parseInt(this.value);
        
        if (selectedJabatanId) {
            const jabatan = employeeData.find(j => j.id === selectedJabatanId);
            updateAllCalculations(jabatan);
        } else {
            updateAllCalculations(null);
        }
    });
    
    kapasitasInput.addEventListener('input', function() {
        const kapasitas = parseInt(this.value) || 0;
        updateBiayaPerProduk(kapasitas, currentTarifBtkl);
    });
    
    // Trigger change on load if there's a selected value
    if (jabatanSelect.value) {
        jabatanSelect.dispatchEvent(new Event('change'));
    }
});
</script>
